@model  Web.Models.AdditionalServicesViewModel

@if (Model.Services.Any())
{
    <br />
    <b>Дополнительные услуги:</b>
    <br />

    for (int i = 0; i < Model.Services.Count; i++)
    {
        @Html.CheckBoxFor(m => m.Services[i].Selected)
        @Model.Services[i].Name
        @Html.HiddenFor(m => m.Services[i].Name)
        @Html.HiddenFor(m => m.Services[i].Price)
        <br />
    }
}


